{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app-vue",
  "version": "0.1.0",
  "identifier": "com.tauri-app-vue.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri_app_vue",
        "width": 800,
        "height": 600,
        "create": true,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "tray-icon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Trading Controller"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}